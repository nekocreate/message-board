<div class="panel panel-info">
    <div class="panel-heading">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <span class="h4">メッセージ一覧</span>
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <span class="label label-warning"><%= message.age %>さぃ</span>
        <%= message.body %>
        (<%= link_to "編集" , edit_message_path(message) %>
         <%= link_to "削除" ,message , method: :delete, data: { confirm: '削除しても宜しいですか？' } %>
        )
        <hr />
        <% end %>
    </div>
</div>

<%# 部分テンプレートを読み込む %>
<%= render 'form' %>
